{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "amd",
    "moduleResolution": "node",
    "strict": false,
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDirs": [
      "src",
    ],

    "noImplicitAny": false,
    "strictNullChecks": true,

    "jsxImportSource": "@emotion/react",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}