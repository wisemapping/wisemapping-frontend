{
  "include": [
    "src/**/*",
    "vite.config.ts",
    ".storybook/**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2022",
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "rootDirs": [
      "src",
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}